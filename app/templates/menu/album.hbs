<form {{action 'updateAlbum' model.musicBook on='submit'}}>
	{{!-- <p>Image: {{input type='text' value=model.musicBook.imgUrl}}</p> --}}
	<div class="row">
	    <div class="input-field col s6">
          		{{input  type="text" class="validate" value=model.musicBook.imgUrl}}
          	<label class="active" for="last_name">Image:</label>
        </div>
     </div> 

	{{!-- <p>Title: {{input type='text' value=model.musicBook.title}}</p>  --}}
	<div class="row">
    	<div class="input-field col s6">
          		{{input  type="text" class="validate" value=model.musicBook.title}}
          	<label class="active" for="last_name">Title:</label>
        </div>
     </div> 
	
	{{!-- <p>Author:{{input type='text' value=model.musicBook.author.fullName}}</p>  --}}
	<div class="row">
    	<div class="input-field col s6">
          		{{input  type="text" class="validate" value=model.musicBook.author.fullName}}
          	<label class="active" for="last_name">Author:</label>
        </div>
     </div> 

	{{!-- <p>Price: {{input type='number' value=model.musicBook.price}}</p>  --}}
	<div class="row">
    	<div class="input-field col s6">
          		{{input  type="number" class="validate" value=model.musicBook.price}}
          	<label class="active" for="last_name">Price:</label>
        </div>
     </div> 

	<button class="waves-effect waves-light btn" disabled={{if model.musicBook.isSaving 'true' ''}}>Update</button> 
	<button class="waves-effect waves-light btn" disabled={{if model.musicBook.isSaving 'true' ''}} {{action 'deleteAlbum' model.musicBook on='click'}}>Delete</button>
	<button class="waves-effect waves-light btn" disabled={{if model.musicBook.isSaving 'true' ''}} {{action 'addToCart' model.musicBook on='click'}}>Add to cart</button><br><br>

	<p>
		<button class="waves-effect waves-light btn" {{action 'showAuthors' on='click'}}>Show authors</button>
	</p>
		{{#if isChangingAuthor}}
			{{#each model.authors as |author|}}
				<p>
					<a href="#" {{action 'changeAuthor' author on='click'}}>{{author.fullName}}</a>
				</p>	
			{{/each}}
		{{/if}}
</form>